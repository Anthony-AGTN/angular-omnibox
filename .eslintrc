{
    "extends": ["airbnb-base"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "comma-dangle": ["error", "never"],
        "max-len": 0,
        "import/prefer-default-export": 0,
        "no-extra-boolean-cast": 1,
        "arrow-parens": 1,
        "class-methods-use-this": 0,
        "space-unary-ops": 1,
        "no-mixed-operators": 1,
        "no-undef": 1,
        "no-useless-escape": 1,
        "no-lonely-if": 1,
        "import/first": 1,
        "import/newline-after-import": 1,
        "no-plusplus": 0,
        "spaced-comment": 1,
        "import/extensions": 1,
        "no-underscore-dangle": 0
    },
    "globals": {
        "angular": true,
        "jQuery": true,
        "beforeEach": true,
        "describe": true,
        "it": true,
        "inject": true,
        "expect": true,
        "spyOn": true,
        "jasmine": true
    }
}
